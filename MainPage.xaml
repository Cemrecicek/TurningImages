<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurningImages.MainPage">

    <ScrollView>
        <StackLayout>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="img1" Source="one.jpg" Grid.Row="0" Grid.Column="0" />
                <Image x:Name="img2" Source="two.jpg" Grid.Row="0" Grid.Column="1" />
                <Image x:Name="img3" Source="three.jpg" Grid.Row="1" Grid.Column="0" />
                <Image x:Name="img4" Source="four.jpg" Grid.Row="1" Grid.Column="1" />


            </Grid>

            <Button x:Name="change" Text="Click!" WidthRequest="150" Margin="50" BackgroundColor="Gold" FontAttributes="Bold" FontSize="Large" Clicked="change_Clicked"/>
            



        </StackLayout>
    </ScrollView>

</ContentPage>
